<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthoriseUserField">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/authorise_user_field</item>
        <item name="android:background">@drawable/bg_sign_in_field</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthoriseUserFieldError">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/authorization_error</item>
        <item name="android:background">@drawable/bg_sign_in_field_error</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonMainBlue">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:theme">@style/ThemeButtonMainBlue</item>
        <item name="android:fontFamily">@font/montserrat_700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProfileItem">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/bg_profile_item</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ProfileItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_profile_item_icon</item>
    </style>

    <style name="ProfileItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_item_text</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
    </style>

    <style name="ProfileItemIconAfterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProfileItemTextAfterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_item_text</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
    </style>

    <style name="MainCategoryIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_main_category</item>
    </style>

    <style name="MainCategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>


</resources>
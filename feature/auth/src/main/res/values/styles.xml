<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainBlue">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:theme">@style/ThemeButtonMainBlue</item>
        <item name="android:fontFamily">@font/montserrat_700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeButtonMainBlue">
        <item name="colorPrimary">@color/main_blue</item>
    </style>

    <style name="AuthoriseUserField">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/authorise_user_field</item>
        <item name="android:background">@drawable/bg_sign_in_field</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthoriseUserFieldError">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/authorization_error</item>
        <item name="android:background">@drawable/bg_sign_in_field_error</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
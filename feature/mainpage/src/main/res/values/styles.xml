<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeButtonMainBlue">
        <item name="colorPrimary">@color/main_blue</item>
    </style>

    <style name="ButtonMainBlue">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:theme">@style/ThemeButtonMainBlue</item>
        <item name="android:fontFamily">@font/montserrat_700</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="MainCategoryIcon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_main_category</item>
    </style>

    <style name="MainCategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>


</resources>